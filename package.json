{
  "name": "mkeditor",
  "productName": "MKEditor",
  "license": "MIT",
  "version": "1.2.2",
  "author": "Chris Rowles <christopher.rowles@outlook.com>",
  "description": "Markdown Editor - Desktop",
  "main": "src/main.js",
  "scripts": {
    "build:mkeditor": "webpack --config webpack.config.js",
    "build:executable": "npm run build:mkeditor && electron-builder --dir",
    "build:installer": "npm run build:mkeditor && electron-builder",
    "dev:execute": "node ./node_modules/electron/cli.js .",
    "dev:web": "http-server ./dist"
  },
  "devDependencies": {
    "asar": "^3.1.0",
    "css-loader": "^5.2.7",
    "electron": "^12.2.3",
    "electron-builder": "^23.6.0",
    "file-loader": "^6.2.0",
    "highlight.js": "^11.4.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "markdown-it": "^12.3.2",
    "markdown-it-container": "^3.0.0",
    "monaco-editor": "^0.27.0",
    "monaco-editor-webpack-plugin": "^4.2.0",
    "sass": "^1.39.0",
    "sass-loader": "^10.2.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@popperjs/core": "^2.11.6",
    "about-window": "^1.15.2",
    "bootstrap": "^5.2.0",
    "split.js": "^1.6.5",
    "sweetalert2": "^11.4.0",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "appId": "com.mkeditor.app",
    "directories": {
      "output": "releases/${platform}/${arch}"
    },
    "linux": {
      "target": "deb",
      "icon": "build/resources/icon.ico",
      "category": "Utility"
    },
    "win": {
      "target": "nsis",
      "icon": "build/resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/resources/icon.ico",
      "license": "build/resources/license.txt"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true
    }
  }
}
