{
  "name": "mkeditor",
  "productName": "MKEditor",
  "version": "2.4.0",
  "license": "MIT",
  "author": "Chris Rowles <christopher.rowles@outlook.com>",
  "description": "Markdown Editor",
  "main": "dist/app/main.js",
  "scripts": {
    "clean-all": "rm -rf ./dist && rm -rf ./releases",
    "prettier": "prettier . --write",
    "lint": "eslint src --ext .ts",
    "prebuild": "node -p \"'export const APP_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/browser/version.ts",
    "build-editor": "npm run prebuild && npm run prettier && webpack --config webpack.config.js",
    "build-app": "tsc -p tsconfig.app.json",
    "build-installer": "electron-builder",
    "serve-web": "http-server dist",
    "serve-app": "electron ."
  },
  "devDependencies": {
    "@electron/asar": "^3.2.8",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@popperjs/core": "^2.11.8",
    "@types/bootstrap": "^5.2.10",
    "@types/markdown-it": "^13.0.7",
    "@types/markdown-it-container": "^2.0.9",
    "@types/node": "^20.10.2",
    "@types/wicg-file-system-access": "^2023.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.2",
    "bootstrap": "^5.3.2",
    "circle-buffer": "^0.1.5",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "file-loader": "^6.2.0",
    "highlight.js": "^11.9.0",
    "html-webpack-plugin": "^5.5.3",
    "markdown-it": "^13.0.2",
    "markdown-it-container": "^3.0.0",
    "monaco-editor": "^0.44.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "split.js": "^1.6.5",
    "style-loader": "^3.3.3",
    "sweetalert2": "^11.10.1",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.mkeditor.app",
    "directories": {
      "output": "releases/${platform}/${arch}"
    },
    "fileAssociations": [
      {
        "ext": [
          "md"
        ],
        "name": "Plain Text",
        "role": "Editor"
      }
    ],
    "linux": {
      "target": "deb",
      "icon": "build/resources/icon256x256.png",
      "category": "Utility"
    },
    "mac": {
      "target": "pkg",
      "icon": "build/resources/icon512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/resources/icon.ico",
      "license": "build/resources/license.txt"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true
    },
    "pkg": {
      "license": "build/resources/license.txt"
    }
  }
}
