{
  "name": "mkeditor",
  "license": "MIT",
  "version": "1.0.0",
  "author": "Chris Rowles",
  "description": "Markdown Editor - Desktop",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "execute": "node ./node_modules/electron/cli.js .",
    "make:executable": "electron-forge make",
    "make:installer": "npm run make:executable && node package/installer.js"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "asar": "^3.1.0",
    "css-loader": "^5.2.7",
    "electron": "^12.2.3",
    "electron-winstaller": "^5.0.0",
    "file-loader": "^6.2.0",
    "highlight.js": "^11.4.0",
    "html-webpack-plugin": "^5.5.0",
    "markdown-it": "^12.3.2",
    "markdown-it-container": "^3.0.0",
    "monaco-editor": "^0.27.0",
    "monaco-editor-webpack-plugin": "^4.2.0",
    "sass": "^1.39.0",
    "sass-loader": "^10.2.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@popperjs/core": "^2.11.6",
    "about-window": "^1.15.2",
    "bootstrap": "^5.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "split.js": "^1.6.5",
    "sweetalert2": "^11.4.0",
    "webpack-merge": "^5.8.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "iconUrl": "https://mkeditoross.github.io/mkeditor/favicon.ico",
            "setupIcon": "./app/assets/logo.ico",
            "authors": "Chris Rowles",
            "description": "Markdown Editor - Desktop",
            "copyright": "Copyright © Chris Rowles 2022. All Rights Reserved"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ],
          "config": {
            "authors": "Chris Rowles",
            "description": "Markdown Editor - Desktop",
            "copyright": "Copyright © Chris Rowles 2022. All Rights Reserved"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "authors": "Chris Rowles",
            "description": "Markdown Editor - Desktop",
            "copyright": "Copyright © Chris Rowles 2022. All Rights Reserved"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "authors": "Chris Rowles",
            "description": "Markdown Editor - Desktop",
            "copyright": "Copyright © Chris Rowles 2022. All Rights Reserved"
          }
        }
      ]
    }
  }
}
