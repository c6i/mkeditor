{
  "name": "mkeditor",
  "productName": "MKEditor",
  "license": "MIT",
  "version": "1.6.0",
  "author": "Chris Rowles <christopher.rowles@outlook.com>",
  "description": "Markdown Editor - Desktop",
  "main": "src/main.js",
  "scripts": {
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "build:mkeditor": "webpack --config webpack.config.js",
    "build:executable": "npm run build:mkeditor && electron-builder --dir",
    "build:installer": "npm run build:mkeditor && electron-builder",
    "dev:execute": "node ./node_modules/electron/cli.js .",
    "serve:web": "http-server ./dist",
    "github:page": "http-server ./docs"
  },
  "devDependencies": {
    "@electron/asar": "^3.2.4",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.1",
    "css-loader": "^6.8.1",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "esbuild": "0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "file-loader": "^6.2.0",
    "highlight.js": "^11.8.0",
    "html-webpack-plugin": "^5.5.3",
    "http-server": "^14.1.1",
    "markdown-it": "^13.0.1",
    "markdown-it-container": "^3.0.0",
    "monaco-editor": "^0.41.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "sass": "^1.66.0",
    "sass-loader": "^13.3.2",
    "split.js": "^1.6.5",
    "style-loader": "^3.3.3",
    "sweetalert2": "^11.7.27",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "about-window": "^1.15.2"
  },
  "build": {
    "appId": "com.mkeditor.app",
    "directories": {
      "output": "releases/${platform}/${arch}"
    },
    "linux": {
      "target": "deb",
      "icon": "build/resources/icon256x256.png",
      "category": "Utility"
    },
    "mac": {
      "target": "pkg",
      "icon": "build/resources/icon512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/resources/icon.ico",
      "license": "build/resources/license.txt"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true
    },
    "pkg": {
      "license": "build/resources/license.txt"
    }
  }
}
